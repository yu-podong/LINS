<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/write_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="제목"
                android:textColor="@color/brightModeFont"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="사용자닉네임"
                    android:textColor="@color/brightModeFont"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/nickname"
                    android:layout_toRightOf="@+id/nickname"
                    android:layout_marginRight="10dp"
                    android:text="|"
                    android:textSize="13dp"
                    android:textColor="@color/brightModeFont"/>


                <TextView
                    android:id="@+id/write_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/line"
                    android:layout_toRightOf="@+id/line"
                    android:layout_marginRight="50dp"
                    android:text="2021.06.13"
                    android:textSize="13dp"
                    android:textColor="@color/brightModeFont"/>

                <ImageView
                    android:id="@+id/views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/write_day"
                    app:srcCompat="@drawable/ic_view"
                    android:textSize="13dp"/>

                <TextView
                    android:id="@+id/view_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/views"
                    android:layout_toRightOf="@+id/views"
                    android:layout_marginRight="20dp"
                    android:text="1,023"
                    android:textSize="13dp"
                    android:textColor="@color/brightModeFont"/>

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/view_num"
                    app:srcCompat="@drawable/ic_comment" />

                <TextView
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/comment_icon"
                    android:layout_toRightOf="@+id/comment_icon"
                    android:text="10"
                    android:textSize="13dp"
                    android:textColor="@color/brightModeFont"/>

            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>